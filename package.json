{
  "name": "gatsby-pokemon",
  "private": true,
  "description": "Frontend for pokemon GraphQL api built on Gatsby",
  "version": "0.1.0",
  "author": "Danila Maximov <mr.quze@gmail.com>",
  "dependencies": {
    "gatsby": "2.17.15",
    "gatsby-plugin-manifest": "2.2.28",
    "gatsby-plugin-react-helmet": "3.1.15",
    "gatsby-plugin-styled-components": "3.1.13",
    "gatsby-plugin-typescript": "2.1.18",
    "gatsby-source-filesystem": "2.1.37",
    "gatsby-source-graphql": "2.1.23",
    "intersection-observer": "0.7.0",
    "prop-types": "15.7.2",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-helmet": "5.2.1",
    "react-icons": "3.8.0",
    "reselect": "4.0.0",
    "styled-components": "4.4.1",
    "styled-normalize": "8.0.6",
    "tiny-cookie": "2.3.1",
    "unistore": "3.5.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@types/node": "12.12.8",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "@types/react-helmet": "5.0.14",
    "@types/styled-components": "4.4.0",
    "@typescript-eslint/eslint-plugin": "2.7.0",
    "@typescript-eslint/parser": "2.7.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-plugin-styled-components": "1.10.6",
    "babel-preset-gatsby": "0.2.22",
    "coveralls": "3.0.7",
    "cross-env": "6.0.3",
    "eslint": "6.6.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.5.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "ts-jest": "24.1.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.1.0",
    "typescript": "3.7.2"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "cross-env LIMITED=1 gatsby develop",
    "format": "prettier --write src/**/*.{js,jsx}",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "test": "jest",
    "test:ci": "jest --collect-coverage --coverageReporters=text-lcov | coveralls",
    "tslint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix --format verbose",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dan-maximov/gatsby-pokemons"
  },
  "bugs": {
    "url": "https://github.com/dan-maximov/gatsby-pokemons/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write",
      "jest ./src",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint",
      "prettier --write",
      "npm run tslint",
      "git add"
    ]
  }
}
