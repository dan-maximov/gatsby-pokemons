{
  "name": "gatsby-pokemon",
  "private": true,
  "description": "Frontend for pokemon GraphQL api built on Gatsby",
  "version": "0.1.0",
  "author": "Danila Maximov <mr.quze@gmail.com>",
  "dependencies": {
    "gatsby": "^2.13.51",
    "gatsby-plugin-manifest": "^2.2.4",
    "gatsby-plugin-react-helmet": "^3.1.3",
    "gatsby-plugin-styled-components": "^3.1.2",
    "gatsby-source-filesystem": "^2.1.8",
    "gatsby-source-graphql": "^2.1.3",
    "intersection-observer": "^0.7.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-icons": "^3.7.0",
    "reselect": "^4.0.0",
    "styled-components": "^4.3.2",
    "styled-normalize": "^8.0.6",
    "tiny-cookie": "^2.3.1",
    "unistore": "^3.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-preset-gatsby": "^0.2.8",
    "coveralls": "^3.0.6",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write src/**/*.{js,jsx}",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "test": "jest",
    "test:ci": "jest --collect-coverage --coverageReporters=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meatspincom/gatsby-pokemons"
  },
  "bugs": {
    "url": "https://github.com/meatspincom/gatsby-pokemons/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "node_modules/.bin/eslint",
      "prettier --write",
      "jest ./src",
      "git add"
    ]
  }
}
